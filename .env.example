# Django Configuration
DJANGO_SECRET_KEY=your_secret_key_here_change_in_production
DJANGO_DEBUG=0
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# DATABASE_TYPE can be 'postgresql' (default) or 'sqlite'
DATABASE_TYPE=postgresql

# PostgreSQL Configuration (used when DATABASE_TYPE=postgresql)
DB_NAME=vps_monitor
DB_USER=postgres
DB_PASSWORD=your_db_password_here
DB_HOST=db
DB_PORT=5432

# SQLite Configuration (used when DATABASE_TYPE=sqlite)
# Leave as default or specify custom path
DB_PATH=/app/db.sqlite3

# API Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
CACHE_BACKEND_URL=redis://redis:6379/1

# Domain Configuration
DOMAIN=your_domain.com
FRONTEND_DOMAIN=your_frontend_domain.com
LETSENCRYPT_EMAIL=your_email@example.com

# AWS S3 / MinIO Configuration
USE_S3_STORAGE=0
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1
AWS_S3_ENDPOINT_URL=http://minio:9000

# MinIO Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your_minio_password_here

# Monitoring Configuration
PROMETHEUS_PORT=9091
GRAFANA_ADMIN_PASSWORD=StrongP@ssw0rd!Change_Me
GRAFANA_ALLOW_SIGNUP=false
GRAFANA_ANONYMOUS_ACCESS=false

# Credential Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here

# External Services
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
ESKIZ_EMAIL=your_eskiz_email
ESKIZ_PASSWORD=your_eskiz_password
